<T3DataStructure>
	<sheets>
		<general>
			<ROOT>
				<sheetTitle>LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.settings</sheetTitle>
				<type>array</type>
				<el>
					<hidden>
						<label>Hiding / Display Elements</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>none</label>
									<value>0</value>
								</numIndex>
								<numIndex index="1">
									<label>Hidden only on xs</label>
									<value>d-none d-sm-block</value>
								</numIndex>
								<numIndex index="2">
									<label>Hidden on sm and down</label>
									<value>d-none d-md-block</value>
								</numIndex>
								<numIndex index="3">
									<label>Hidden on md and down</label>
									<value>d-none d-lg-block</value>
								</numIndex>
								<numIndex index="4">
									<label>Hidden on lg and down</label>
									<value>d-none d-xl-block</value>
								</numIndex>
								<numIndex index="5">
									<label>Hidden only on xl</label>
									<value>d-xl-none</value>
								</numIndex>
								<numIndex index="6">
									<label>Visible only on xs</label>
									<value>d-block d-sm-none</value>
								</numIndex>
								<numIndex index="7">
									<label>Visible sm and down</label>
									<value>d-block d-md-none</value>
								</numIndex>
								<numIndex index="8">
									<label>Visible md and down</label>
									<value>d-block d-lg-none</value>
								</numIndex>
								<numIndex index="9">
									<label>Visible lg and down</label>
									<value>d-block d-xl-none</value>
								</numIndex>
							</items>
							<default>0</default>
						</config>
					</hidden>

					<display_type>
						<onChange>reload</onChange>
						<label>LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.appearance</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>Tabs</label>
									<value>tabs</value>
								</numIndex>
								<numIndex index="1">
									<label>Pills</label>
									<value>pills</value>
								</numIndex>
								<numIndex index="2">
									<label>Vertical Pills</label>
									<value>verticalpills</value>
								</numIndex>
							</items>
							<default>tabs</default>
						</config>
					</display_type>
					<aside_width>
						<label>Aside columns width</label>
						<displayCond>FIELD:display_type:=:verticalpills</displayCond>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>1</label>
									<value>1</value>
								</numIndex>
								<numIndex index="1">
									<label>2</label>
									<value>2</value>
								</numIndex>
								<numIndex index="2">
									<label>3</label>
									<value>3</value>
								</numIndex>
								<numIndex index="3">
									<label>4</label>
									<value>4</value>
								</numIndex>
								<numIndex index="4">
									<label>6</label>
									<value>6</value>
								</numIndex>
							</items>
							<default>3</default>
						</config>
					</aside_width>
					<switch_effect>
						<label>LLL:EXT:t3sbootstrap/Resources/Private/Language/locallang_be.xlf:flexforms.effect</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>none</label>
									<value>0</value>
								</numIndex>
								<numIndex index="1">
									<label>fade</label>
									<value>fade</value>
								</numIndex>
							</items>
							<default>fade</default>
						</config>
					</switch_effect>
					<fill>
						<label>Fill and justify</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>none</label>
									<value>0</value>
								</numIndex>
								<numIndex index="1">
									<label>nav-fill</label>
									<value>nav-fill</value>
								</numIndex>
								<numIndex index="2">
									<label>nav-justified</label>
									<value>nav-justified</value>
								</numIndex>
							</items>
							<default>0</default>
						</config>
					</fill>
				</el>
			</ROOT>
		</general>
	</sheets>
</T3DataStructure>
