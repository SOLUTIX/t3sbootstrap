<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<general>
			<ROOT>
				<sheetTitle>General</sheetTitle>
				<el>
					<shift>
						<label>Vertical shift in % ( 0 = center, range: -60 to 60 )</label>
						<displayCond>USER:T3SBS\T3sbootstrap\UserFunction\TcaMatcher->isLocalVideo</displayCond>
						<config>
							<type>number</type>
							<size>5</size>
							<default>0</default>
							<range>
								<lower>-60</lower>
								<upper>60</upper>
							</range>
							<slider>
								<step>1</step>
								<width>200</width>
							</slider>
						</config>
					</shift>
					<loop>
						<label>Loop (local video)</label>
						<displayCond>USER:T3SBS\T3sbootstrap\UserFunction\TcaMatcher->isLocalVideo</displayCond>
						<config>
							<type>check</type>
						</config>
					</loop>
					<muted>
						<label>Muted (local video)</label>
						<displayCond>USER:T3SBS\T3sbootstrap\UserFunction\TcaMatcher->isLocalVideo</displayCond>
						<config>
							<type>check</type>
						</config>
					</muted>
					<controls>
						<label>Controls (local video)</label>
						<displayCond>USER:T3SBS\T3sbootstrap\UserFunction\TcaMatcher->isLocalVideo</displayCond>
						<config>
							<type>check</type>
						</config>
					</controls>
					<playsinline>
						<label>Playsinline (local video)</label>
						<displayCond>USER:T3SBS\T3sbootstrap\UserFunction\TcaMatcher->isLocalVideo</displayCond>
						<config>
							<type>check</type>
						</config>
					</playsinline>
					<bgOverlay>
						<label>Background color for caption</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>none</label>
									<value>0</value>
								</numIndex>
								<numIndex index="1">
									<label>Caption only</label>
									<value>caption</value>
								</numIndex>
								<numIndex index="2">
									<label>Entire image (overlay)</label>
									<value>image</value>
								</numIndex>
							</items>
							<default>0</default>
						</config>
					</bgOverlay>
					<captionVAlign>
						<label>Caption vertical align</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>Top</label>
									<value>top</value>
								</numIndex>
								<numIndex index="1">
									<label>Center</label>
									<value>center</value>
								</numIndex>
								<numIndex index="2">
									<label>Bottom</label>
									<value>end</value>
								</numIndex>
							</items>
							<default>end</default>
						</config>
					</captionVAlign>
				</el>
			</ROOT>
		</general>
	</sheets>
</T3DataStructure>
